<%= form_for @article do |f| %>

    <% if @article.errors.any? %>
        <section class="errors">
            <% for error in @article.errors.full_messages %>
                <li><%= error %></li>
            <% end %>
        </section>
    <% end %>

    <p>
        <%= f.label :title %>
        <%= f.text_field :title, autofocus: true %>
    </p>

    <p>
        <%= f.label :body %>
        <%= f.text_area :body %>
    </p>

    <p>
        <%= f.submit %>
    </p>

<% end %>